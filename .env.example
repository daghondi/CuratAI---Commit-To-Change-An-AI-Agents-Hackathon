# CuratAI Environment Configuration
# Copy this file to .env and fill in your actual values

# ============ API KEYS ============
# OpenAI GPT-4 for proposal generation
OPENAI_API_KEY=sk-your-key-here

# Anthropic Claude for alternative LLM
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Opik for monitoring and orchestration
OPIK_API_KEY=your-opik-api-key

# ============ OPPORTUNITY APIs ============
# OpenCall.ai for exhibitions and calls
OPENCALL_API_KEY=your-opencall-key

# GrantWatch for grant opportunities
GRANTWATCH_API_KEY=your-grantwatch-key

# Submittable for open calls
SUBMITTABLE_API_KEY=your-submittable-key

# Artist Residencies database
RESIDENCY_API_KEY=your-residency-key

# ============ DATABASE ============
# PostgreSQL connection string
DATABASE_URL=postgresql://curataai:curataai_dev@localhost:5432/curataai

# Database password
DB_PASSWORD=curataai_dev

# Redis connection string
REDIS_URL=redis://localhost:6379/0

# ============ OPIK CONFIGURATION ============
# Opik workspace name
OPIK_WORKSPACE_NAME=default

# Opik project name
OPIK_PROJECT_NAME=curataai

# ============ DOCKER & DEPLOYMENT ============
# pgAdmin credentials
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Grafana credentials
GRAFANA_PASSWORD=admin

# ============ EMAIL & NOTIFICATIONS ============
# Email service (for notifications)
EMAIL_SERVICE=sendgrid  # or aws_ses, mailgun, smtp
SENDGRID_API_KEY=sg-your-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============ WEB3 & BLOCKCHAIN ============
# IPFS gateway (for provenance)
IPFS_GATEWAY=https://gateway.pinata.cloud
PINATA_API_KEY=your-pinata-key
PINATA_API_SECRET=your-pinata-secret

# Web3 provider (for blockchain features)
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-key
WEB3_CONTRACT_ADDRESS=0x...

# ============ LOGGING & MONITORING ============
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============ FEATURE FLAGS ============
# Enable/disable features for testing
ENABLE_LLM_PROPOSALS=true
ENABLE_REAL_APIs=false
ENABLE_WEB3=true
ENABLE_MULTI_USER=true

# ============ DEVELOPMENT ============
# Debug mode (NEVER use in production)
DEBUG=false

# Environment (development, staging, production)
ENVIRONMENT=development

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============ SECURITY ============
# Secret key for session management
SECRET_KEY=change-me-to-a-random-secret-in-production

# JWT secret for API authentication
JWT_SECRET=change-me-to-a-random-jwt-secret

# API key for internal services
INTERNAL_API_KEY=change-me-to-a-random-api-key

# ============ RATE LIMITING ============
# Requests per minute for anonymous users
RATE_LIMIT_ANONYMOUS=30

# Requests per minute for authenticated users
RATE_LIMIT_AUTHENTICATED=100

# ============ DATA & STORAGE ============
# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=50

# Storage backend (local, s3, gcs)
STORAGE_BACKEND=local
STORAGE_PATH=./data/uploads

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=curataai-uploads
AWS_REGION=us-east-1

# ============ NOTIFICATION PREFERENCES ============
# Deadline reminder days before (default: 7)
DEADLINE_REMINDER_DAYS=7

# Email digest frequency (daily, weekly, never)
EMAIL_DIGEST=daily

# ============ PERFORMANCE ============
# Cache TTL in seconds
CACHE_TTL=3600

# Database connection pool size
DB_POOL_SIZE=10

# Worker threads for background jobs
WORKER_THREADS=4
